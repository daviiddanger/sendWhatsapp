<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sendWhatsapp.MainPage">

    <VerticalStackLayout  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="10">

        <Entry  x:Name="ladaEntry" Placeholder="ingresa la lada"/>
        <Entry x:Name="numberEntry" Placeholder="Ingresa un número telefónico"  />
        <Entry x:Name="messageEntry" Placeholder="Escribe el mensaje"/>
        <Button Text="Enviar Mensaje" BackgroundColor="green" Clicked="Button_Clicked" />


    </VerticalStackLayout>
    
    
    
</ContentPage>
